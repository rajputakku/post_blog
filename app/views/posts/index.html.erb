<p id="notice"><%= notice %></p>
<div style="text-align: left;">
 Hey <%= current_user.email %>
</div>
<div style="text-align: right;">
<% if current_user.present? %>
        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% end %>
</div>
<div style="text-align: right;">
<%= link_to 'Trash Posts', trash_path %>
</div>
<h1>All stock recommendation.</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Company Name</th>
      <th colspan="3">About</th>
      <th colspan="3">Recommendation</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td colspan="3"><%= post.company_name %></td>
        <td colspan="3"><%= post.body %></td>
        <td colspan="3"><%= post.recommendation %></td>
        <td colspan="3"><%= link_to 'Show', post %>
        <% if post.user_id == current_user.id %>
      <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path %>


