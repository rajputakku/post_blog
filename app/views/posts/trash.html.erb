<p id="notice"><%= notice %></p>

<h1>Trash Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.present? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Restore', restore_post_path(post) %></td>
      </tr>
    <% end %>
    <% else %>
    <h4>You don't have any trash post.</h4>
    <% end %>
  </tbody>
</table>
<br>

<h1>Trash Comments</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @comments.present? %>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.post_id %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Restore', restore_comment_path(comment, post_id: comment.post_id) %></td>
      </tr>
    <% end %>
    <% else %>
    <h4>You don't have any trash comment.</h4>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', posts_path %>

